{{#partial "content"}}
    <div class = "row">
        <div class="col-md-6">
            <h1>Squad list!</h1>

            {{#if squads}}
                <p>Current squad</p>
                {{#each squads}}
                    <div class="card">
                        <p>Name: {{ squadName }}</p>
                        <p>Cause: {{ cause }}</p>
                        <p>Size: {{ size }}</p>
                        <form action="/herosform/new" >
                            <button class="btn btn-primary">Add a hero to your squad</button>
                        </form>
                    </div>


                {{/each}}
            {{else}}
                <p>No Squad!</p>

            {{/if}}
        </div>

        {{#if heroes}}
            {{#each heroes}}
                {{squadName}}
                {{ name }}
                {{ age }}
                {{ specialPower }}
                {{ weakness }}
            {{/each}}
    {{else}}
    {{/if}}
{{/partial}}

{{> layout.hbs}}