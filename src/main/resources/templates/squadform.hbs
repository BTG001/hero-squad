{{#partial "content"}}

<h1>Make your Squad:</h1>
<form action="/squads/new" method="post">

    <div class="form-group">
    <label for="SquadName">Enter the name of your squad:</label>
    <input id="squadName" name="squadName" class="form-control" type="text" placeholder="Squad Name" required>
    </div>
    <div class="form-group">
        <label for="cause">What is the purpose of your squad?</label>
        <input id="cause" name="cause" class="form-control" type="text" placeholder="Purpose of squad" required>
    </div>
    <div class="form-group">
        <label for="size">How many Heroes do you want in your squad?</label>
        <input id="size" name="size" class="form-control" placeholder="Size of squad" required>
    </div>
    <button type="submit" class="btn btn-primary text-light">Create Squad!</button>
</form>
{{/partial}}

{{> layout.hbs}}